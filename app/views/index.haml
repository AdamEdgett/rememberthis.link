%div
  %p
    = current_user.email
  %div
    %h2
      Tags
    - current_user.tags.each do |tag|
      %a{href: "/tag/#{tag.text}"}
        = tag.text
  %div
    %h2
      Links
    - current_user.links.each do |link|
      %a{href: link.url}
        = link.title
  %form{action: "/links", method: "post"}
    %div
      Title:
      %input{type: "text", name: "title"}
    %div
      URL:
      %input{type: "text", name: "url"}
    %div
      Tags:
      %input{type: "text", name: "tags"}
    %input{type: "submit", value:"Save"}
